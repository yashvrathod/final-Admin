// Research Interests
model ResearchInterest {
  id        String   @id @default(cuid())
  interest  String
  order     Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Teaching Interests
model TeachingInterest {
  id        String   @id @default(cuid())
  interest  String
  order     Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
